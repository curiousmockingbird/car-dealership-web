<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Car Dealership</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
		@using Dealership.Models;

    <a href="/"> <-- Go back to home page</a>
		<h1>Available vehicles:</h1>
		
		@if (Car.GetAll().Count == 0)
		{
			<p> No cars currently available. </p>
		} else {
      
			<ul>
			@foreach(Car car in Model["AllCars"])
			{
				<a href='/cars/@car.Id'><li> @car.MakeModel</li></a>
			}
		  </ul>
		}

		@if (NewCar.GetAllNew().Count == 0)
		{
			<p> No new cars currently available. </p>
		} else {
      
			<ul>
			@foreach(NewCar newCar in Model["AllNewCars"])
			{
				<a href='/cars/@newCar.NewId'><li>@newCar.NewMakeModel</li></a>
			}
		</ul>
		}

	
		<p>	<a href='/cars/new'>Click here </a>to sell your vehicle</p>

  </body>
</html>